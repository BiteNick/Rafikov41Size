<Page x:Class="Rafikov41Size.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rafikov41Size"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        FontFamily="Comic Sans MS"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5" Width="225">
                <TextBlock Text="Логин" FontSize="16"/>
                <TextBox Name="loginTB" Width="150" FontSize="16" Margin="21 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" Width="225">
                <TextBlock Text="Пароль" FontSize="16"/>
                <TextBox Name="passwordTB" Width="150" FontSize="16" Margin="10 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <Button Name="guestBtn" Content="Войти как гость" Margin="10" Width="175" Click="guestBtn_Click"/>
                <Button Name="enterBtn" Content="Войти" Margin="10" Width="175" Click="enterBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

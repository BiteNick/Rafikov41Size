<Window x:Class="Rafikov41Size.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rafikov41Size"
        mc:Ignorable="d"
        FontFamily="Comic Sans MS"
        Icon="Resources/icon.ico"
        Title="MainWindow" Height="450" Width="800"
        MinHeight="350" MinWidth="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="Resources/logo.png" HorizontalAlignment="Left"/>
        <TextBlock Text="ООО 41 размер" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="BtnBack" Click="BtnBack_Click" Content="Назад" HorizontalAlignment="Right"/>

        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
